  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "contact": {
        "type": "object",
        "required": [
          "_id",
          "name",
          "phoneNumber",
          "contactType",
          "userId"
        ],
        "properties": {
          "_id": {
            "description": "Contact's id\"",
            "type": "string",
            "example": "66bb2c46d348911e38a4e9d5"
          },
          "name": {
            "description": "Contact's name",
            "type": "string",
            "example": "John Doe"
          },
          "email": {
            "description": "Contact's email",
            "type": "string",
            "example": "johndoe@example.com"
          },
          "phoneNumber": {
            "description": "Contact's phoneNumber",
            "type": "string",
            "example": "123-456-7890"
          },
          "contactType": {
            "description": "Contact's type",
            "type": "string",
            "enum": [
              "work",
              "home",
              "personal"
            ],
            "default": "personal",
            "example": "work"
          },
          "isFavourite": {
            "description": "Weather is favourite contact or not",
            "type": "boolean",
            "default": false,
            "example": true
          },
          "photo": {
            "description": "URL of the contact's photo",
            "type": "string",
            "format": "uri",
            "example": "https://res.cloudinary.com/demo/image/upload/v1616191512/sample.jpg"
          },
          "userId": {
            "description": "Contact's user id",
            "type": "string",
            "example": "66bb2c04d348911e38a4e9c1"
          },
          "createdAt": {
            "description": "At what date and time the user was created",
            "type": "string",
            "format": "date-time",
            "example": "2024-08-23T11:43:04.629Z"
          },
          "updatedAt": {
            "description": "At what date and time the user was updated",
            "type": "string",
            "format": "date-time",
            "example": "2024-08-23T11:43:04.629Z"
          }
        }
      },
      "user": {
        "type": "object",
        "required": [
          "_id",
          "name",
          "email",
          "createdAt",
          "updatedAt"
        ],
        "properties": {
          "_id": {
            "description": "User's id",
            "type": "string",
            "example": "66bb2c46d348911e38a4e9d5"
          },
          "name": {
            "description": "User's name",
            "type": "string",
            "example": "Jane Smith"
          },
          "email": {
            "description": "User's email",
            "type": "string",
            "example": "janesmith@example.com"
          },
          "createdAt": {
            "description": "At what date and time the user was created",
            "type": "string",
            "format": "date-time",
            "example": "2024-08-23T11:43:04.629Z"
          },
          "updatedAt": {
            "description": "At what date and time the user was updated",
            "type": "string",
            "format": "date-time",
            "example": "2024-08-23T11:43:04.629Z"
          }
        }
      },
      "session": {
        "type": "object",
        "required": [
          "accessToken"
        ],
        "properties": {
          "accessToken": {
            "description": "Current session access token, valid 15min",
            "type": "string",
            "example": "1dU+uOrhvBRlgJpO6shwNGbZdh5kiIWTh545vtaB"
          }
        }
      }
    },
    "responses": {
      "400": {
        "description": "Bad Request - Invalid input data",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 400
                },
                "message": {
                  "type": "string",
                  "example": "Invalid input data"
                }
              }
            }
          }
        }
      },
      "401": {
        "description": "Unauthorized error",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message",
                "data"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 401
                },
                "message": {
                  "type": "string",
                  "example": "UnauthorizedError"
                },
                "data": {
                  "type": "object",
                  "required": [
                    "message"
                  ],
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Access token expired"
                    }
